<header class="flex flex-row justify-between border-b p-3">
  {{__('layout.title')}}

  <div>
    <a href="/" class="text-blue-500 capitalize"> {{ __n('home', 2) }} </a>
    |
    <a href="/users/" class="text-blue-500 capitalize"> {{ __n('user', 2) }} </a>
  </div>

  <div class="relative">
    <input type="checkbox" id="language-selector" class="hidden absolute">
    <label for="language-selector" class="flex items-center space-x-1 cursor-pointer">
      <span>{{ locale }}</span>
      <svg class="h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
      </svg>
    </label>

    <div id="languages-menu" class="absolute mt-1 right-1 top-full min-w-max shadow rounded opacity-0 border border-gray-400 transition delay-75 ease-in-out z-10 bg-white">
      <ul class="block text-right">
        {% for locale in locales %}
          <li><a href="?lang={{ locale }}" class="block px-3 py-2">{{ locale }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
</header>
