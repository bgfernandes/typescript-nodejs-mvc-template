{
  "name": "typescript-nodejs-mvc-template",
  "version": "1.0.0",
  "description": "A template for traditional server-side rendered MVC application using NodeJS and TypeScript",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && NODE_ENV=development node dist/server.js",
    "build": "npm run clean && tsc && npm run tailwind-css && npm run copy-files",
    "build-prod": "npm run clean && tsc && npm run tailwind-css-prod && npm run copy-files",
    "lint": "eslint . --ext .ts",
    "dev": "nodemon --watch './src/**/*.*' --exec 'npm run start'",
    "copy-files": "copyfiles -a -u 1 'src/**/*' dist/ -e '**/*.ts' -e 'src/assets/**/*'",
    "clean": "rm -rf dist",
    "test": "jest",
    "tailwind-css": "npx tailwindcss -i ./src/assets/styles/tailwind.css -o ./dist/public/tailwind.css",
    "tailwind-css-prod": "NODE_ENV=production npx tailwindcss -i ./src/assets/styles/tailwind.css -o ./dist/public/tailwind.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bgfernandes/typescript-nodejs-mvc-template.git"
  },
  "author": "github.com/bgfernandes",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bgfernandes/typescript-nodejs-mvc-template/issues"
  },
  "homepage": "https://github.com/bgfernandes/typescript-nodejs-mvc-template#readme",
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@types/cookie-parser": "^1.4.2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/i18n": "^0.13.0",
    "@types/jest": "^26.0.23",
    "@types/nunjucks": "^3.1.4",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "autoprefixer": "^10.2.6",
    "copyfiles": "^2.4.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.22.0",
    "jest": "^27.0.5",
    "nodemon": "^2.0.7",
    "postcss": "^8.3.5",
    "supertest": "^6.1.3",
    "tailwindcss": "^2.2.4",
    "ts-jest": "^27.0.3",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "i18n": "^0.13.3",
    "nunjucks": "^3.2.3"
  }
}
